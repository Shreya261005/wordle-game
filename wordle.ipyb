import nltk
nltk.download('words')
from nltk.corpus import words
import random
word_list = [word.lower() for word in words.words() if len(word) == 5 and word.isalpha()]
secret_word = random.choice(word_list)
attempts = 6

print("ğŸ® Welcome to Wordle in Colab!")
print("ğŸŸ© Correct letter & position | ğŸŸ¨ Correct letter, wrong position | â¬œ Not in word")

def check_guess(guess, secret):
    result = ""
    for i in range(5):
        if guess[i] == secret[i]:
            result += "ğŸŸ©"
        elif guess[i] in secret:
            result += "ğŸŸ¨"
        else:
            result += "â¬œ"
    return result

while attempts > 0:
    guess = input(f"\nAttempt {7 - attempts}/6: Enter a 5-letter word: ").lower()

    if len(guess) != 5:
        print("âš ï¸ Please enter exactly 5 letters.")
        continue
    if guess not in word_list:
        print("âŒ Not a valid English word.")
        continue

    feedback = check_guess(guess, secret_word)
    print("Result:", feedback)

    if guess == secret_word:
        print(f"ğŸ‰ You guessed it! The word was: {secret_word}")
        break

    attempts -= 1

if attempts == 0 and guess != secret_word:
    print(f"ğŸ”š Out of attempts. The word was: {secret_word}")
